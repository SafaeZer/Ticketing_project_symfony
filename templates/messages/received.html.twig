{% extends 'base.html.twig' %}

{% block title %}Messenger
{% endblock %}

{% block body %}
	<section class="container">
		<div class="col-6 mx-auto">
			<div class="row">
				<div class="col-12">
					<h1>Messenger</h1>
					<h2>Mailbox</h2>
					<p>You received
						{{ app.user.received|length }}
						messages</p>
				</div>
				<div class="col-3">from</div>
				<div class="col-3">Subject</div>
				<div class="col-3">Date</div>
				<div class="col-3">Actions</div>
				{% for message in app.user.received %}
					{% set bold = "" %}
					{% if message.isRead == 0 %}
						{% set bold = "fw-bold" %}
					{% endif %}
					<div class="col-3 {{bold}}">{{ message.sender.email }}</div>
					<div class="col-3 {{bold}}">
						<a href="{{ path("read", {id: message.id}) }}">{{ message.title }}</a>
					</div>
					<div class="col-3 {{bold}}">{{ message.createdAt|date }}</div>
					<div class="col-3">
						<a href="{{ path("deletemessage", {id: message.id}) }}">
							<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewbox="0 0 16 16">
								<path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
								<path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
							</svg>
						</a>
					</div>

				{% endfor %}
			</div>
			<a href="{{path("send")}}" class="btn btn-primary">Send a Message</a>
		</div>
	</section>
{% endblock %}
